mixin edit-create()

    div#edit-create.modal.fade(role="dialog")
        div.modal-dialog
            .modal-content
                .modal-body
                    .container
                        h2.register-header Question info
                        form#create-form.form-horizontal(action='')
                            .form-group
                                label.control-label.col-sm-3.col-xs-3.col-md-3.col-lg-3(for='question') Question name:
                                .col-sm-9.col-xs-9.col-md-9.col-lg-9
                                    input.form-control(type='text', placeholder='Enter question name', name='question') 
                            .form-group
                                label.control-label.col-sm-3.col-xs-3.col-md-3.col-lg-3(for="question-type") Answer Type:
                                .col-sm-9.col-xs-9.col-md-9.col-lg-9
                                    select.question-types.form-control(name="question-type")
                                        each questionType in questionTypes
                                            option(value=questionType.q_type)
                                                | #{questionType.q_type}  
                            div#answers
                            .form-group
                                .col-sm-offset-2.col-sm-10
                                    button.btn.btn-success.done Done
    
                .modal-footer
                    button.btn.btn-default(type="button", data-dismiss="modal")
                        | Close







